<style>
    .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 24px;
    }

    @media only screen and (max-width: 700px) {
        .header {
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 24px;
        }

        #searchForm {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
    }


    .header-left {
        display: flex;
        align-items: center;
        gap: 18px;
    }

    .header-right {
        display: flex;
        align-items: center;
    }

    .search-input {
        padding: 4px;
        min-width: 350px;
        appearance: none;
        height: 26px;
        border: none;
        border-bottom: 1px solid black;
    }

    .header-search-filter {
        display: flex;

        > button {
            display: flex;
        }
    }

    #searchForm {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .date-input {
        appearance: none;
        min-width: 135px;
    }

    .header-search {
        display: flex;
    }

    .header-search-wrapper {
        position: relative;
    }

    #searchButton {
        display: flex;
        height: 100%;
        align-items: center;
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }

    #searchButton:focus-visible {
        outline: auto;
    }

    @media only screen and (max-width: 700px) { 
        h1 {
            display: none;
        }

        .search-input {
            min-width: 200px; 
        }
    }
    .searchform-top {
        display: flex;
        width: 100%;
        justify-content: space-between;
    }

    .filter-label {
        font-size: 12px;
        margin-bottom: 2px;
        font-weight: 600;
    }

    .filter-input-wrapper {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    #filterButton {
        display: flex;
        align-items: center;
        border-bottom: 1px solid transparent;
    }

    .header-date-search {
        display: flex;
        flex: 1;
        gap: 8px;
    }
    
</style>
<header class="header">
    <form id="searchForm">
        <div class="searchform-top">
            <div class="header-left">
                <img src="/img/logo_small.png" />
                <div>
                    <h1>BOUDICCA.EVENTS</h1>
                </div>
            </div>

            <div class="header-right">
                <div class="header-search">
                    <div class="header-search-wrapper">
                        <div>
                            <label for="name" class="visible-hidden">Textsuche</label>
                            <input id="name" name="name" type="text" class="search-input" />
                        </div>
                        <button id="searchButton" aria-describedby="Events finden" type="submit">
                            <svg height="24px" width="24px" title="Suche Logo" viewBox="0 0 512 512" >
                                <use xlink:href="#search"></use>  
                            </svg>
                        </button>
                    </div>

                    <button id="filterButton" aria-describedby="Filter Ã¶ffnen" aria-controls="drawer" type="button">
                        <svg height="22px" width="22px" title="Filter Logo" viewBox="0 0 512 512" >
                            <use xlink:href="#funnel"></use>  
                        </svg>
                    </button>
                     {{> layout/drawer}}
                </div>
            </div>
        </div>
    </form>
</header>
